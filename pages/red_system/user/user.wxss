.user-container {
  padding: 20px;
  background-color: #fff3e0;
}

.avatar-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20px;
  background: #fff;
  border-radius: 8px;
  margin-bottom: 20px;
  border: 1px solid #d32f2f;
}

.avatar {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
  margin-bottom: 10px;
  border: 2px solid #d32f2f;
}

.nickname-input {
  width: 80%;
  height: 40px;
  border: 1px solid #d32f2f;
  border-radius: 4px;
  padding: 0 10px;
  margin-top: 10px;
  color: #d32f2f;
} 