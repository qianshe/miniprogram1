.login-container {
  min-height: 100vh;
  padding: 0 40rpx;
  background-color: #f8f8f8;
}

/* 主题样式 */
.white-theme {
  background-color: #f8f8f8;
}

.red-theme {
  background-color: #fff3e0;
}

/* 头部 */
.header {
  display: flex;
  align-items: center;
  padding: 40rpx 0;
  position: relative;
}

.back-icon {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-icon image {
  width: 40rpx;
  height: 40rpx;
}

.title {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

/* Logo */
.logo-container {
  display: flex;
  justify-content: center;
  margin: 60rpx 0;
}

.logo {
  width: 200rpx;
  height: 200rpx;
}

/* 表单 */
.form-container {
  background: #fff;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.input-group {
  margin-bottom: 30rpx;
}

.input-label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.input {
  height: 90rpx;
  border-bottom: 1rpx solid #eee;
  font-size: 30rpx;
}

.login-btn {
  margin-top: 50rpx;
  height: 90rpx;
  line-height: 90rpx;
  border-radius: 45rpx;
  font-size: 32rpx;
  color: #fff;
}

.white-btn {
  background: #07c160;
}

.red-btn {
  background: #d32f2f;
}

.divider {
  display: flex;
  align-items: center;
  margin: 40rpx 0;
}

.line {
  flex: 1;
  height: 1rpx;
  background: #eee;
}

.text {
  padding: 0 20rpx;
  color: #999;
  font-size: 26rpx;
}

.wx-login-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 90rpx;
  border-radius: 45rpx;
  font-size: 32rpx;
  color: #333;
  background: #f5f5f5;
  border: none;
}

.wx-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}

/* 底部 */
.footer {
  text-align: center;
  margin-top: 60rpx;
  font-size: 26rpx;
  color: #999;
}

.link {
  display: inline;
}

.white-text {
  color: #07c160;
}

.red-text {
  color: #d32f2f;
} 