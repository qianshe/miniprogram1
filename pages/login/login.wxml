<view class="login-container {{systemType}}-theme">
  <t-navbar 
    title="用户登录" 
    left-arrow 
    bind:go-back="goBack"
  />

  <view class="content" style="margin-top: {{navHeight}}px">
    <view class="logo-container">
      <image class="logo" src="/assets/images/logo.png" mode="aspectFit"></image>
    </view>

    <view class="form-container">
      <view class="input-group">
        <view class="input-label">手机号</view>
        <input 
          class="input" 
          type="number" 
          placeholder="请输入手机号" 
          value="{{phone}}" 
          bindinput="onPhoneInput"
          maxlength="11"
        />
      </view>
      
      <view class="input-group">
        <view class="input-label">密码</view>
        <input 
          class="input" 
          type="password" 
          placeholder="请输入密码" 
          value="{{password}}" 
          bindinput="onPasswordInput"
        />
      </view>

      <t-button 
        class="login-btn {{systemType}}-btn" 
        bind:tap="login" 
        loading="{{loading}}"
        disabled="{{loading}}"
        theme="{{systemType === 'red' ? 'danger' : 'primary'}}"
        block
      >登录</t-button>

      <view class="divider">
        <view class="line"></view>
        <view class="text">或</view>
        <view class="line"></view>
      </view>

      <t-button
        class="wx-login-btn"
        bind:tap="wxLogin"
        disabled="{{loading}}"
        theme="default"
        block
        icon="/assets/icons/wechat.png"
      >微信一键登录</t-button>
    </view>
  </view>
</view>