<view class="page">

<view class="example-search">
  <t-search placeholder="搜索预设文案" />
</view>
<view class="swiper">
  <t-swiper
  current="{{current}}"
  autoplay="{{autoplay}}"
  duration="{{duration}}"
  interval="{{interval}}"
  list="{{swiperList}}"
  navigation="{{ { type: 'dots-bar' } }}"
/>
</view>

<!-- 添加加载状态显示 -->
<t-loading wx:if="{{loading}}" theme="circular" size="40rpx" loading />

<!-- 无数据显示 -->
<t-empty wx:elif="{{!processSteps.length}}" description="暂无流程数据" />

<!-- 流程列表 -->
<block wx:else>
  <view class="process-step" wx:for="{{processSteps}}" wx:key="index">
    <text class="process-step-title">{{item.title}}</text>
    <text class="process-step-content">{{item.content}}</text>
  </view>
</block>
</view>

<custom-tab-bar></custom-tab-bar>
