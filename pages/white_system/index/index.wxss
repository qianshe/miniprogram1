/* pages/white_system/white_system.wxss */
.page {
  padding: 20px;
  /* 高度直接填充满 */
  height: 100%;
  box-sizing: border-box; 
  display: block;
  overflow-y: auto;
  /* 添加底部安全距离，预留tabBar高度 */
  padding-bottom: calc(20px + 48px); /* 原有padding + tabBar高度 */
}

/* 添加流程区块样式 */
.process-section {
  background-color: #ffffff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 20rpx;
  padding-left: 20rpx;
  border-left: 4rpx solid #07c160;
}

/* 修改流程步骤样式 */
.process-step {
  background-color: #f8f8f8;
  border-radius: 8rpx;
  padding: 20rpx;
  margin-bottom: 16rpx;
  display: flex;
  flex-direction: column;
  position: relative;
}

.process-step-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 10rpx;
}

.process-step-content {
  font-size: 26rpx;
  color: #666666;
}

.step-arrow {
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  color: #999999;
  font-family: "宋体";
  font-weight: bold;
}

.example-search .swiper{
  background-color: var(--bg-color-demo);
  padding: 16rpx 32rpx;
}

.example-search:not(:last-child) {
  margin-bottom: 32rpx;
}

.img {
  width: 100%;
  height: 100%;
}

/* 推荐商品区域样式 */
.recommended-section {
  margin: 20rpx;
}

.products-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.product-item {
  background-color: #ffffff;
  border-radius: 8rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.product-image {
  width: 100%;
  height: 240rpx;
}

.product-info {
  padding: 16rpx;
}

.product-name {
  font-size: 28rpx;
  color: #333333;
  margin-bottom: 8rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.product-price {
  font-size: 32rpx;
  font-weight: bold;
  color: #07c160;
}