.page {
  padding: 30rpx;
  min-height: 100vh;
}

/* 主题样式 */
.white-theme {
  background-color: #f8f8f8;
}

.red-theme {
  background-color: #fff3e0;
}

/* 步骤标题样式 */
.step-header {
  margin-bottom: 30rpx;
}

.step-title {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.white-title {
  color: #333333;
}

.red-title {
  color: #d32f2f;
}

.step-desc {
  font-size: 28rpx;
  color: #666666;
}

/* 步骤图片样式 */
.step-image-container {
  margin-bottom: 30rpx;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.step-image {
  width: 100%;
  height: 360rpx;
}

/* 内容区块样式 */
.white-section {
  background-color: #ffffff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  border-left: 4rpx solid #07c160;
}

.red-section {
  background-color: #ffffff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  border-left: 4rpx solid #d32f2f;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.white-section-title {
  color: #07c160;
}

.red-section-title {
  color: #d32f2f;
}

/* 步骤内容样式 */
.step-content {
  font-size: 28rpx;
  color: #333333;
  line-height: 1.6;
}

/* 提示列表样式 */
.tips-list {
  margin-top: 20rpx;
}

.tip-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 16rpx;
}

.white-tip-item {
  color: #333333;
}

.red-tip-item {
  color: #333333;
}

.tip-icon {
  margin-right: 10rpx;
  font-size: 32rpx;
}

.white-tip-icon {
  color: #07c160;
}

.red-tip-icon {
  color: #d32f2f;
}

.tip-text {
  font-size: 28rpx;
  line-height: 1.5;
  flex: 1;
}

/* 相关商品样式 */
.no-products {
  text-align: center;
  color: #999999;
  padding: 30rpx 0;
}

.products-list {
  margin-top: 20rpx;
}

.product-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eeeeee;
}

.white-product-item {
  border-bottom: 1rpx solid #e6f7ef;
}

.red-product-item {
  border-bottom: 1rpx solid #ffebee;
}

.product-item:last-child {
  border-bottom: none;
}

.product-image-container {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  overflow: hidden;
  margin-right: 20rpx;
}

.product-image {
  width: 100%;
  height: 100%;
}

.product-info {
  flex: 1;
}

.product-name {
  font-size: 28rpx;
  color: #333333;
  margin-bottom: 10rpx;
}

.product-price {
  font-size: 32rpx;
  font-weight: bold;
}

.white-price {
  color: #07c160;
}

.red-price {
  color: #d32f2f;
}

.add-to-cart-btn {
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 20rpx;
}

.white-btn {
  background-color: #07c160;
  color: #ffffff;
}

.red-btn {
  background-color: #d32f2f;
  color: #ffffff;
}

.add-icon {
  font-size: 40rpx;
  font-weight: bold;
} 