.scan-container {
  padding: 30rpx;
  min-height: 100vh;
  background-color: #f5f5f5;
}

.page-header {
  margin-bottom: 30rpx;
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.result-section {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.scan-image-container {
  width: 100%;
  height: 400rpx;
  background-color: #f9f9f9;
  border-radius: 8rpx;
  overflow: hidden;
  margin-bottom: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.scan-image {
  width: 100%;
  height: 100%;
  object-fit: contain;
}

.product-info {
  margin-bottom: 30rpx;
}

.product-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 20rpx;
}

.product-name {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  margin-bottom: 16rpx;
}

.product-price {
  display: flex;
  align-items: center;
  justify-content: center;
}

.current-price {
  font-size: 44rpx;
  color: #f44336;
  font-weight: bold;
}

.original-price {
  font-size: 28rpx;
  color: #999;
  text-decoration: line-through;
  margin-left: 16rpx;
}

.info-divider {
  height: 1px;
  background-color: #f0f0f0;
  margin: 20rpx 0;
}

.info-row {
  display: flex;
  margin-bottom: 15rpx;
  font-size: 28rpx;
  line-height: 1.5;
}

.info-label {
  width: 160rpx;
  color: #666;
}

.info-value {
  flex: 1;
  color: #333;
}

.info-value.description {
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.action-buttons {
  display: flex;
  justify-content: space-between;
  margin-top: 30rpx;
}

.action-btn {
  width: 48%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 40rpx;
  font-size: 28rpx;
}

.action-btn.primary {
  background-color: #f44336;
  color: #fff;
}

.action-btn.secondary {
  background-color: #f5f5f5;
  color: #666;
}

.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.loading-icon {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #07c160;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 30rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #666;
}

.scan-placeholder {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
}

.placeholder-icon {
  font-size: 80rpx;
  margin-bottom: 30rpx;
}

.placeholder-text {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 50rpx;
}

.scan-btn {
  width: 300rpx;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #07c160;
  color: #fff;
  font-size: 28rpx;
  border-radius: 40rpx;
}

.error-message {
  text-align: center;
  font-size: 28rpx;
  color: #f44336;
  margin: 30rpx 0;
}

.retry-btn {
  color: #2196f3;
  margin-top: 20rpx;
  font-size: 28rpx;
}

.scan-tips {
  margin-top: 60rpx;
  width: 80%;
}

.tips-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #666;
  margin-bottom: 16rpx;
}

.tips-item {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 10rpx;
  line-height: 1.4;
}

.bottom-buttons {
  margin-top: 50rpx;
}

.bottom-btn {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #f5f5f5;
  color: #666;
  font-size: 28rpx;
  border-radius: 40rpx;
} 