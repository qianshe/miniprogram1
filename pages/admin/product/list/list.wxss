.admin-products-container {
  padding: 0 30rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.page-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  margin-bottom: 20rpx;
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.action-buttons {
  display: flex;
}

.scan-btn {
  background-color: #2196f3;
  color: #fff;
  font-size: 28rpx;
  padding: 10rpx 30rpx;
  border-radius: 8rpx;
  line-height: 1.5;
  margin-right: 20rpx;
}

.create-btn {
  background-color: #07c160;
  color: #fff;
  font-size: 28rpx;
  padding: 10rpx 30rpx;
  border-radius: 8rpx;
  line-height: 1.5;
}

.search-container {
  display: flex;
  margin-bottom: 20rpx;
}

.search-box {
  flex: 1;
  position: relative;
  margin-right: 20rpx;
}

.search-input {
  width: 100%;
  height: 80rpx;
  border-radius: 40rpx;
  background-color: #fff;
  padding: 0 80rpx 0 30rpx;
  font-size: 28rpx;
}

.search-icon {
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
}

.search-icon image {
  width: 40rpx;
  height: 40rpx;
}

.filter-btn {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 40rpx;
  background-color: #fff;
}

.filter-btn image {
  width: 40rpx;
  height: 40rpx;
}

.sort-options {
  display: flex;
  background-color: #fff;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.sort-item {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  font-size: 28rpx;
  color: #666;
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
}

.sort-item.active {
  color: #07c160;
  font-weight: bold;
}

.sort-icon {
  width: 0;
  height: 0;
  margin-left: 10rpx;
}

.sort-icon.asc {
  border-left: 10rpx solid transparent;
  border-right: 10rpx solid transparent;
  border-bottom: 10rpx solid #07c160;
}

.sort-icon.desc {
  border-left: 10rpx solid transparent;
  border-right: 10rpx solid transparent;
  border-top: 10rpx solid #07c160;
}

.filter-panel {
  position: fixed;
  top: 0;
  right: -80%;
  width: 80%;
  height: 100%;
  background-color: #fff;
  z-index: 1000;
  transition: right 0.3s;
  box-shadow: 0 0 20rpx rgba(0, 0, 0, 0.1);
}

.filter-panel.show {
  right: 0;
}

.filter-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.filter-header text {
  font-size: 32rpx;
  font-weight: bold;
}

.close-icon {
  padding: 10rpx;
}

.close-icon image {
  width: 40rpx;
  height: 40rpx;
}

.filter-content {
  padding: 30rpx;
}

.filter-item {
  margin-bottom: 40rpx;
}

.filter-label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.price-range {
  display: flex;
  align-items: center;
}

.price-input {
  flex: 1;
  height: 70rpx;
  border: 1rpx solid #ddd;
  border-radius: 6rpx;
  padding: 0 20rpx;
  text-align: center;
  font-size: 26rpx;
}

.price-separator {
  margin: 0 20rpx;
  color: #999;
}

.category-list {
  display: flex;
  flex-wrap: wrap;
}

.category-item {
  padding: 10rpx 30rpx;
  margin: 0 20rpx 20rpx 0;
  font-size: 26rpx;
  color: #666;
  background-color: #f5f5f5;
  border-radius: 30rpx;
}

.category-item.active {
  background-color: #07c160;
  color: #fff;
}

.filter-footer {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  background-color: #fff;
  border-top: 1rpx solid #eee;
}

.reset-btn, .apply-btn {
  width: 46%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 40rpx;
  font-size: 28rpx;
}

.reset-btn {
  background-color: #f5f5f5;
  color: #666;
}

.apply-btn {
  background-color: #07c160;
  color: #fff;
}

.product-list {
  padding-bottom: 30rpx;
}

.loading, .empty {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
  font-size: 28rpx;
}

.product-item {
  display: flex;
  background-color: #fff;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.product-thumb {
  width: 200rpx;
  height: 200rpx;
  position: relative;
}

.product-thumb image {
  width: 100%;
  height: 100%;
}

.product-status {
  position: absolute;
  top: 0;
  left: 0;
  padding: 6rpx 16rpx;
  font-size: 22rpx;
  color: #fff;
}

.status-on {
  background-color: #07c160;
}

.status-off {
  background-color: #999;
}

.product-info {
  flex: 1;
  padding: 20rpx;
  position: relative;
}

.product-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.product-category {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.product-price {
  display: flex;
  align-items: baseline;
  margin-bottom: 10rpx;
}

.price {
  font-size: 32rpx;
  color: #f44336;
  font-weight: bold;
  margin-right: 10rpx;
}

.original-price {
  font-size: 24rpx;
  color: #999;
  text-decoration: line-through;
}

.product-sales {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.product-actions {
  display: flex;
  flex-wrap: wrap;
}

.action-btn {
  margin-right: 20rpx;
  font-size: 24rpx;
  padding: 0 20rpx;
  height: 50rpx;
  line-height: 50rpx;
  border-radius: 25rpx;
  margin-bottom: 10rpx;
}

.edit-btn {
  color: #2196f3;
  background-color: rgba(33, 150, 243, 0.1);
}

.on-btn {
  color: #07c160;
  background-color: rgba(7, 193, 96, 0.1);
}

.off-btn {
  color: #ff9800;
  background-color: rgba(255, 152, 0, 0.1);
}

.delete-btn {
  color: #f44336;
  background-color: rgba(244, 67, 54, 0.1);
}

.load-more, .no-more {
  text-align: center;
  padding: 20rpx 0;
  font-size: 26rpx;
  color: #999;
} 