.admin-container {
  padding: 30rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 顶部管理员信息 */
.admin-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  margin-bottom: 30rpx;
}

.admin-info {
  display: flex;
  align-items: center;
}

.admin-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.admin-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 6rpx;
}

.admin-role {
  font-size: 24rpx;
  color: #999;
}

.logout-btn {
  font-size: 26rpx;
  color: #666;
  padding: 10rpx 20rpx;
  background-color: #f0f0f0;
  border-radius: 30rpx;
}

/* 功能模块导航 */
.module-grid {
  display: flex;
  flex-wrap: wrap;
  background-color: #fff;
  border-radius: 12rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
}

.module-item {
  width: 33.33%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx 0;
  box-sizing: border-box;
  position: relative;
}

.module-item::after {
  content: '';
  position: absolute;
  bottom: 0;
  right: 0;
  width: 100%;
  height: 1rpx;
  background-color: #f0f0f0;
}

.module-item::before {
  content: '';
  position: absolute;
  top: 0;
  right: 0;
  width: 1rpx;
  height: 100%;
  background-color: #f0f0f0;
}

.module-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 10rpx;
}

.module-name {
  font-size: 26rpx;
  color: #333;
}

/* 通用的区块标题 */
.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin: 30rpx 0 20rpx;
  padding-left: 20rpx;
  border-left: 8rpx solid #07c160;
  line-height: 1;
}

/* 数据统计格子 */
.stat-grid {
  display: flex;
  flex-wrap: wrap;
  background-color: #fff;
  border-radius: 12rpx;
  margin-bottom: 30rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.stat-item {
  width: 50%;
  padding: 30rpx 0;
  text-align: center;
  position: relative;
}

.stat-item::after {
  content: '';
  position: absolute;
  bottom: 0;
  right: 0;
  width: 100%;
  height: 1rpx;
  background-color: #f0f0f0;
}

.stat-item::before {
  content: '';
  position: absolute;
  top: 0;
  right: 0;
  width: 1rpx;
  height: 100%;
  background-color: #f0f0f0;
}

.stat-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #999;
}

/* 待处理事项列表 */
.todo-list {
  background-color: #fff;
  border-radius: 12rpx;
  margin-bottom: 30rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.todo-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.todo-item:last-child {
  border-bottom: none;
}

.todo-info {
  display: flex;
  align-items: center;
}

.todo-icon {
  width: 50rpx;
  height: 50rpx;
  margin-right: 20rpx;
}

.todo-name {
  font-size: 28rpx;
  color: #333;
}

.todo-count {
  background-color: #ff4d4f;
  color: #fff;
  font-size: 24rpx;
  min-width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  border-radius: 20rpx;
  text-align: center;
  padding: 0 10rpx;
}

/* 热销产品排行榜 */
.product-rank-list {
  background-color: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.product-rank-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.product-rank-item:last-child {
  border-bottom: none;
}

.rank-number {
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  background-color: #f0f0f0;
  color: #666;
  font-size: 24rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.product-rank-item:nth-child(1) .rank-number {
  background-color: #ff4d4f;
  color: #fff;
}

.product-rank-item:nth-child(2) .rank-number {
  background-color: #ffa940;
  color: #fff;
}

.product-rank-item:nth-child(3) .rank-number {
  background-color: #faad14;
  color: #fff;
}

.product-thumb {
  width: 100rpx;
  height: 100rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.product-info {
  flex: 1;
}

.product-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  max-width: 300rpx;
}

.product-sales {
  font-size: 24rpx;
  color: #999;
}

.product-amount {
  font-size: 30rpx;
  color: #f44336;
  font-weight: bold;
} 