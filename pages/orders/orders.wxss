.orders-container {
  padding: 20rpx;
  background: #f6f6f6;
  min-height: 100vh;
}

.custom-tabs {
  margin-bottom: 20rpx;
}

.order-list {
  margin-top: 20rpx;
  height: calc(100vh - 200rpx);
}

.order-item {
  background: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  padding: 20rpx;
}

.order-header {
  display: flex;
  justify-content: space-between;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.order-no {
  color: #666;
  font-size: 26rpx;
}

.order-status {
  color: #ff4d4f;
  font-size: 26rpx;
}

.goods-list {
  padding: 20rpx 0;
}

.goods-item {
  display: flex;
  margin-bottom: 20rpx;
}

.goods-item image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
}

.goods-info {
  flex: 1;
  margin-left: 20rpx;
}

.goods-info .name {
  font-size: 28rpx;
  color: #333;
}

.goods-info .price {
  font-size: 26rpx;
  color: #ff4d4f;
  margin-top: 10rpx;
}

.goods-info .quantity {
  font-size: 26rpx;
  color: #999;
  margin-top: 10rpx;
}

.t-cell-group {
  margin-bottom: 20rpx;
  border-radius: 12rpx;
}
