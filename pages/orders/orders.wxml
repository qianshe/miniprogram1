<view class="orders-container">
  <t-tabs defaultValue="{{0}}" bind:change="onTabsChange" t-class="custom-tabs">
    <t-tab-panel label="全部" value="0">
      <scroll-view scroll-y class="order-list">
        <t-empty wx:if="{{!orderList.length}}" description="暂无订单" />
        <block wx:for="{{orderList}}" wx:key="id">
          <t-cell-group>
            <t-cell title="订单号：{{item.orderNo}}" description="{{item.createTime}}" />
            <t-cell title="订单金额" note="￥{{item.totalAmount}}" />
            <t-cell title="订单状态" note="{{item.status}}" />
          </t-cell-group>
        </block>
      </scroll-view>
    </t-tab-panel>
    <t-tab-panel label="待付款" value="1">
      <!-- 待付款订单列表 -->
    </t-tab-panel>
    <t-tab-panel label="已完成" value="2">
      <!-- 已完成订单列表 -->
    </t-tab-panel>
  </t-tabs>
</view>
