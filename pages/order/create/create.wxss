.create-order-container {
  /* 页面滚动时，禁用默认下拉刷新行为, 容器充满屏幕*/
  height: calc(100vh - var(--window-bottom));
  overflow-y: auto;
  overflow-x: hidden;
  padding: 20rpx;
  background: #f5f5f5;
  padding-bottom: 120rpx;
}

.goods-list {
  background: #fff;
  padding: 20rpx;
  margin-top: 20rpx;
  border-radius: 8rpx;
}

.goods-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.goods-item:last-child {
  border-bottom: none;
}

.goods-item t-input {
  flex: 1;
  margin: 0 10rpx;
}

.goods-item t-icon {
  color: #ff4d4f;
  padding: 10rpx;
}

.total {
  text-align: right;
  padding: 30rpx;
  font-size: 32rpx;
  font-weight: bold;
  background: #fff;
  margin: 20rpx 0;
  border-radius: 8rpx;
}

.create-order-container t-button {
  margin-top: 40rpx;
}

.popup-content {
  padding: 20rpx;
  height: 60vh;
  background: #fff;
}

.product-scroll {
  height: calc(100% - 100rpx);
  margin-top: 20rpx;
}

.product-option {
  display: flex;
  justify-content: space-between;
  padding: 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
  transition: background-color 0.3s;
}

.product-option:active {
  background-color: #f8f8f8;
}

.product-option text:first-child {
  color: #333;
  font-size: 28rpx;
}

.product-option text:last-child {
  color: #ff4d4f;
  font-size: 28rpx;
  font-weight: 500;
}

.quantity-control {
  display: flex;
  align-items: center;
  gap: 20rpx;
  flex: 1;
  justify-content: center;
  background: #f8f8f8;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
}

.quantity-control text {
  min-width: 40rpx;
  text-align: center;
  font-size: 28rpx;
  color: #333;
}

.quantity-control t-icon {
  padding: 6rpx;
}

.product-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
  position: relative;
}

.product-item:last-child {
  border-bottom: none;
}

.product-item .product-name {
  flex: 2;
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.product-price {
  flex: 1;
  text-align: right;
  font-size: 28rpx;
  color: #ff4d4f;
  font-weight: 500;
}

.remove-btn {
  margin-left: 20rpx;
  color: #999;
}

.remove-btn:active {
  color: #ff4d4f;
}

.product-list {
  background: #fff;
  border-radius: 12rpx;
  margin: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.product-actions {
  align-items: center;
}

.voice-btn {
  flex: none;
  width: 160rpx;
  height: 80rpx;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s;
}

.voice-btn:active {
  transform: scale(0.95);
  background: #e6f4ff;
}

.product-actions {
  display: flex;
  gap: 20rpx;
}

.debug-box {
  margin: 20rpx;
  padding: 20rpx;
  background: #f8f8f8;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
}

.debug-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.debug-title {
  font-weight: bold;
  color: #666;
}

.debug-content {
  display: block;
  font-family: monospace;
  white-space: pre-wrap;
  font-size: 24rpx;
  color: #333;
  user-select: text;
  width: 100%;
}

.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  background: #fff;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.1);
  box-sizing: border-box;
  z-index: 100;
  gap: 20rpx;
}

.total-amount {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.bottom-bar t-button[theme="primary"] {
  flex: none;
  width: 200rpx;
  margin: 0;
}

.total-amount {
  font-size: 28rpx;
}

.amount {
  font-size: 36rpx;
  font-weight: bold;
  color: #ff4d4f;
  margin-left: 10rpx;
}

.loading-tips,
.no-more-tips,
.empty-tips {
  text-align: center;
  padding: 20rpx;
  color: #999;
  font-size: 28rpx;
}
