.container {
  padding-bottom: 120rpx;
  background: #f8f8f8;
}

/* 白事系统主题 */
.white-theme {
  background-color: #f8f8f8;
}

/* 红事系统主题 */
.red-theme {
  background-color: #fff3e0;
}

.address-section {
  background: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
  position: relative;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

/* 白事系统地址样式 */
.white-address {
  border-left: 4rpx solid #07c160;
}

/* 红事系统地址样式 */
.red-address {
  border-left: 4rpx solid #d32f2f;
}

.address-info {
  padding-right: 40rpx;
}

.user-info {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  margin-bottom: 16rpx;
}

.user-info text {
  margin-right: 40rpx;
  font-size: 32rpx;
  font-weight: 500;
}

.address-detail {
  color: #666;
  font-size: 28rpx;
  line-height: 1.4;
}

.no-address {
  color: #999;
}

.arrow {
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  color: #999;
  font-family: "宋体";
  font-weight: bold;
}

.goods-list {
  background: #fff;
  padding: 0 30rpx;
}

.goods-item {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

/* 白事系统商品项样式 */
.white-goods-item {
  border-bottom: 1rpx solid #e6f7ef;
}

/* 红事系统商品项样式 */
.red-goods-item {
  border-bottom: 1rpx solid #ffebee;
}

.goods-item:last-child {
  border-bottom: none;
}

.goods-image {
  width: 160rpx;
  height: 160rpx;
  margin-right: 20rpx;
  border-radius: 8rpx;
}

.goods-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.goods-name {
  font-size: 28rpx;
  color: #333;
}

.goods-price-quantity {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.goods-price {
  font-weight: bold;
}

/* 白事系统价格颜色 */
.white-price {
  color: #07c160;
}

/* 红事系统价格颜色 */
.red-price {
  color: #d32f2f;
}

.goods-quantity {
  color: #999;
  font-size: 26rpx;
}

.remarks-section {
  margin-top: 20rpx;
  background: #fff;
  padding: 20rpx 30rpx;
}

/* 白事系统备注样式 */
.white-remarks {
  border-top: 1rpx solid #e6f7ef;
}

/* 红事系统备注样式 */
.red-remarks {
  border-top: 1rpx solid #ffebee;
}

.remarks-section input {
  width: 100%;
  height: 60rpx;
}

.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  background: #fff;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0,0,0,0.05);
}

/* 白事系统底部栏 */
.white-footer {
  border-top: 1rpx solid #e6f7ef;
}

/* 红事系统底部栏 */
.red-footer {
  border-top: 1rpx solid #ffebee;
}

.total-amount {
  flex: 1;
}

.amount {
  font-weight: bold;
  font-size: 32rpx;
}

.submit-btn {
  width: 200rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  color: #fff;
  border-radius: 40rpx;
  margin: 0;
}

/* 白事系统提交按钮 */
.white-submit-btn {
  background: #07c160;
}

/* 红事系统提交按钮 */
.red-submit-btn {
  background: #d32f2f;
}

.submit-btn[disabled] {
  background: #ccc;
}
