.container {
  padding-bottom: 120rpx;
  background: #f8f8f8;
}

.address-section {
  background: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
  position: relative;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

.address-info {
  padding-right: 40rpx;
}

.user-info {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  margin-bottom: 16rpx;
}

.user-info text {
  margin-right: 40rpx;
  font-size: 32rpx;
  font-weight: 500;
}

.address-detail {
  color: #666;
  font-size: 28rpx;
  line-height: 1.4;
}

.no-address {
  color: #999;
}

.arrow {
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  color: #999;
  font-family: "宋体";
  font-weight: bold;
}

.goods-list {
  background: #fff;
  padding: 0 30rpx;
}

.goods-item {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.goods-item:last-child {
  border-bottom: none;
}

.goods-image {
  width: 160rpx;
  height: 160rpx;
  margin-right: 20rpx;
}

.goods-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.goods-name {
  font-size: 28rpx;
  color: #333;
}

.goods-price-quantity {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.goods-price {
  color: #e4393c;
  font-weight: bold;
}

.goods-quantity {
  color: #999;
  font-size: 26rpx;
}

.remarks-section {
  margin-top: 20rpx;
  background: #fff;
  padding: 20rpx 30rpx;
}

.remarks-section input {
  width: 100%;
  height: 60rpx;
}

.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  background: #fff;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0,0,0,0.05);
}

.total-amount {
  flex: 1;
}

.amount {
  color: #e4393c;
  font-weight: bold;
  font-size: 32rpx;
}

.submit-btn {
  width: 200rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background: #e4393c;
  color: #fff;
  border-radius: 40rpx;
  margin: 0;
}

.submit-btn[disabled] {
  background: #ccc;
}
