<view class="orders-container">
  <t-tabs defaultValue="{{0}}" bind:change="onTabsChange" t-class="custom-tabs">
    <t-tab-panel label="全部" value="0" />
    <t-tab-panel label="待支付" value="1" />
    <t-tab-panel label="已支付" value="2" />
  </t-tabs>

  <view class="orders-list">
    <view class="no-data" wx:if="{{!loading && orders.length === 0}}">
      暂无订单数据
    </view>
    
    <view class="order-item" wx:for="{{orders}}" wx:key="orderNo" bindtap="onOrderTap" data-orderid="{{item.orderNo}}">
      <view class="order-header">
        <text class="order-no">订单号：{{item.orderNo}}</text>
        <text class="order-status">{{item.statusText}}</text>
      </view>
      
      <view class="order-info">
        <view class="contact-info">
          <text>{{item.contactName}}</text>
          <text>{{item.contactPhone}}</text>
        </view>
        <view class="address">{{item.address}}</view>
        <view class="service-time">服务时间：{{item.displayTime}}</view>
      </view>
      
      <view class="order-footer">
        <text class="total-amount">合计：¥{{item.displayAmount}}</text>
      </view>
    </view>
  </view>
</view>
