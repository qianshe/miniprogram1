.orders-container {
  padding: 20rpx;
  background: #f6f6f6;
  min-height: 100vh;
}

.custom-tabs {
  background: #fff;
  margin-bottom: 20rpx;
}

.order-list {
  padding: 20rpx;
  background: #f5f5f5;
}

.order-item {
  background: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
}

.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 20rpx;
  border-bottom: 1px solid #eee;
}

.order-no {
  font-size: 28rpx;
  color: #666;
}

.order-status {
  font-size: 28rpx;
  color: #333;
}

.order-status.pending {
  color: #ff6b00;
}

.order-info {
  padding: 20rpx 0;
}

.info-row {
  display: flex;
  margin-bottom: 10rpx;
  font-size: 28rpx;
}

.label {
  color: #666;
  width: 160rpx;
}

.order-footer {
  display: flex;
  justify-content: flex-end;
  padding-top: 20rpx;
  border-top: 1px solid #eee;
}

.amount {
  font-size: 32rpx;
  font-weight: bold;
  color: #ff6b00;
}

.loading, .empty, .load-more, .no-more {
  text-align: center;
  padding: 30rpx;
  color: #999;
  font-size: 28rpx;
}

.status-pending {
  color: #e4393c;  /* 待付款-红色 */
}

.status-paid {
  color: #e4393c;  /* 待发货-红色 */
}

.status-shipping {
  color: #07c160;  /* 已发货-绿色 */
}

.status-completed {
  color: #999;  /* 已完成-灰色 */
}

.status-cancelled {
  color: #999;  /* 已取消-灰色 */
}

.goods-list {
  padding: 20rpx 0;
}

.goods-item {
  display: flex;
  margin-bottom: 20rpx;
}

.goods-item image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
}

.goods-info {
  flex: 1;
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.goods-info .name {
  font-size: 28rpx;
  color: #333;
}

.goods-info .price {
  font-size: 26rpx;
  color: #ff4d4f;
  margin-top: 10rpx;
}

.goods-info .quantity {
  font-size: 26rpx;
  color: #999;
  margin-top: 10rpx;
}

.t-cell-group {
  margin-bottom: 20rpx;
  border-radius: 12rpx;
}

.container {
  padding: 20rpx;
  background: #f8f8f8;
  min-height: 100vh;
}

.order-id {
  color: #666;
  font-size: 28rpx;
}

.goods-image {
  width: 120rpx;
  height: 120rpx;
  margin-right: 20rpx;
  border-radius: 8rpx;
}

.goods-name {
  font-size: 28rpx;
  color: #333;
}

.goods-price-quantity {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.goods-price {
  color: #e4393c;
  font-weight: bold;
}

.goods-quantity {
  color: #999;
  font-size: 26rpx;
}

.order-time {
  color: #999;
  font-size: 24rpx;
}

.order-total {
  font-size: 28rpx;
}

.no-data {
  text-align: center;
  color: #999;
  padding: 40rpx 0;
}

/* 添加不同状态的颜色样式 */
.order-status {
  font-size: 28rpx;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
}

.order-status.status-0 {  /* 待支付 */
  color: #ff6b00;
  background: rgba(255, 107, 0, 0.1);
}

.order-status.status-1 {  /* 已支付 */
  color: #07c160;
  background: rgba(7, 193, 96, 0.1);
}

.order-status.status-2 {  /* 已取消 */
  color: #999;
  background: rgba(153, 153, 153, 0.1);
}

.order-status.status-3 {  /* 已退款 */
  color: #666;
  background: rgba(102, 102, 102, 0.1);
}
