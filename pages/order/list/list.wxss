.orders-container {
  padding: 20rpx;
  background: #f6f6f6;
  min-height: 100vh;
}

/* 白事系统主题 */
.white-theme {
  background-color: #f8f8f8;
}

/* 红事系统主题 */
.red-theme {
  background-color: #fff3e0;
}

.custom-tabs {
  background: #fff;
  margin-bottom: 20rpx;
}

/* 白事系统标签页 */
.white-tabs {
  border-bottom: 2rpx solid #e6f7ef;
}

/* 红事系统标签页 */
.red-tabs {
  border-bottom: 2rpx solid #ffebee;
}

.order-list {
  padding: 20rpx;
  background: transparent;
}

.order-item {
  background: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

/* 白事系统订单项 */
.white-order-item {
  border-left: 4rpx solid #07c160;
}

/* 红事系统订单项 */
.red-order-item {
  border-left: 4rpx solid #d32f2f;
}

.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 20rpx;
  border-bottom: 1px solid #eee;
}

.order-no {
  font-size: 28rpx;
  color: #666;
}

.order-status {
  font-size: 28rpx;
  color: #333;
}

.order-status.pending {
  color: #ff6b00;
}

.order-info {
  padding: 20rpx 0;
}

.info-row {
  display: flex;
  margin-bottom: 10rpx;
  font-size: 28rpx;
}

.label {
  color: #666;
  width: 160rpx;
}

.order-footer {
  display: flex;
  justify-content: flex-end;
  padding-top: 20rpx;
  border-top: 1px solid #eee;
}

.amount {
  font-size: 32rpx;
  font-weight: bold;
}

/* 白事系统金额 */
.white-amount {
  color: #07c160;
}

/* 红事系统金额 */
.red-amount {
  color: #d32f2f;
}

.loading, .empty, .load-more, .no-more {
  text-align: center;
  padding: 30rpx;
  color: #999;
  font-size: 28rpx;
}

/* 白事系统加载更多 */
.white-load-more {
  color: #07c160;
}

/* 红事系统加载更多 */
.red-load-more {
  color: #d32f2f;
}

/* 白事系统状态样式 */
.white-status-0 {  /* 待支付 */
  color: #07c160;
  background: rgba(7, 193, 96, 0.1);
}

.white-status-1 {  /* 已支付 */
  color: #07c160;
  background: rgba(7, 193, 96, 0.1);
}

.white-status-2 {  /* 已取消 */
  color: #999;
  background: rgba(153, 153, 153, 0.1);
}

.white-status-3 {  /* 已退款 */
  color: #666;
  background: rgba(102, 102, 102, 0.1);
}

/* 红事系统状态样式 */
.red-status-0 {  /* 待支付 */
  color: #d32f2f;
  background: rgba(211, 47, 47, 0.1);
}

.red-status-1 {  /* 已支付 */
  color: #d32f2f;
  background: rgba(211, 47, 47, 0.1);
}

.red-status-2 {  /* 已取消 */
  color: #999;
  background: rgba(153, 153, 153, 0.1);
}

.red-status-3 {  /* 已退款 */
  color: #666;
  background: rgba(102, 102, 102, 0.1);
}

.status-pending {
  color: #e4393c;  /* 待付款-红色 */
}

.status-paid {
  color: #e4393c;  /* 待发货-红色 */
}

.status-shipping {
  color: #07c160;  /* 已发货-绿色 */
}

.status-completed {
  color: #999;  /* 已完成-灰色 */
}

.status-cancelled {
  color: #999;  /* 已取消-灰色 */
}

.goods-list {
  padding: 20rpx 0;
}

.goods-item {
  display: flex;
  margin-bottom: 20rpx;
}

.goods-item image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
}

.goods-info {
  flex: 1;
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.goods-info .name {
  font-size: 28rpx;
  color: #333;
}

.goods-info .price {
  font-size: 26rpx;
  color: #ff4d4f;
  margin-top: 10rpx;
}

.goods-info .quantity {
  font-size: 26rpx;
  color: #999;
  margin-top: 10rpx;
}

.t-cell-group {
  margin-bottom: 20rpx;
  border-radius: 12rpx;
}

.container {
  padding: 20rpx;
  background: #f8f8f8;
  min-height: 100vh;
}

.order-id {
  color: #666;
  font-size: 28rpx;
}

.goods-image {
  width: 120rpx;
  height: 120rpx;
  margin-right: 20rpx;
  border-radius: 8rpx;
}

.goods-name {
  font-size: 28rpx;
  color: #333;
}

.goods-price-quantity {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.goods-price {
  color: #e4393c;
  font-weight: bold;
}

.goods-quantity {
  color: #999;
  font-size: 26rpx;
}

.order-time {
  color: #999;
  font-size: 24rpx;
}

.order-total {
  font-size: 28rpx;
}

.no-data {
  text-align: center;
  color: #999;
  padding: 40rpx 0;
}

/* 添加不同状态的颜色样式 */
.order-status {
  font-size: 28rpx;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
}

.order-status.status-0 {  /* 待支付 */
  color: #ff6b00;
  background: rgba(255, 107, 0, 0.1);
}

.order-status.status-1 {  /* 已支付 */
  color: #07c160;
  background: rgba(7, 193, 96, 0.1);
}

.order-status.status-2 {  /* 已取消 */
  color: #999;
  background: rgba(153, 153, 153, 0.1);
}

.order-status.status-3 {  /* 已退款 */
  color: #666;
  background: rgba(102, 102, 102, 0.1);
}

/* 搜索和筛选相关样式 */
.search-container {
  display: flex;
  padding: 20rpx;
  background: #fff;
  align-items: center;
  margin-bottom: 20rpx;
}

.search-box {
  flex: 1;
  position: relative;
  height: 70rpx;
  background: #f5f5f5;
  border-radius: 35rpx;
  display: flex;
  align-items: center;
}

.search-input {
  flex: 1;
  height: 70rpx;
  padding: 0 70rpx 0 30rpx;
  font-size: 28rpx;
}

.search-icon {
  position: absolute;
  right: 20rpx;
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.search-icon image {
  width: 36rpx;
  height: 36rpx;
}

.filter-btn {
  width: 70rpx;
  height: 70rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 20rpx;
}

.filter-btn image {
  width: 44rpx;
  height: 44rpx;
}

/* 筛选面板 */
.filter-panel {
  position: fixed;
  top: 0;
  right: -80%;
  width: 80%;
  height: 100%;
  background: #fff;
  z-index: 1000;
  box-shadow: -4rpx 0 10rpx rgba(0, 0, 0, 0.1);
  transition: right 0.3s ease;
  display: flex;
  flex-direction: column;
}

.filter-panel.show {
  right: 0;
}

.filter-header {
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #eee;
}

.filter-header text {
  font-size: 32rpx;
  font-weight: bold;
}

.close-icon {
  width: 40rpx;
  height: 40rpx;
}

.close-icon image {
  width: 36rpx;
  height: 36rpx;
}

.filter-content {
  flex: 1;
  padding: 30rpx;
  overflow-y: auto;
}

.filter-item {
  margin-bottom: 40rpx;
}

.filter-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
}

.date-range, .price-range {
  display: flex;
  align-items: center;
}

.date-picker {
  flex: 1;
  height: 70rpx;
  line-height: 70rpx;
  padding: 0 20rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  font-size: 26rpx;
  color: #666;
}

.date-separator, .price-separator {
  margin: 0 20rpx;
  color: #999;
}

.price-input {
  flex: 1;
  height: 70rpx;
  padding: 0 20rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  font-size: 26rpx;
}

.filter-footer {
  padding: 20rpx 30rpx;
  display: flex;
  justify-content: space-between;
  border-top: 1rpx solid #eee;
}

.reset-btn, .apply-btn {
  width: 45%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 40rpx;
  font-size: 28rpx;
}

.reset-btn {
  background: #f5f5f5;
  color: #666;
}

.apply-btn {
  background: #d32f2f;
  color: #fff;
}

/* 红事系统主题 */
.red-theme .apply-btn {
  background: #d32f2f;
}

/* 白事系统主题 */
.white-theme .apply-btn {
  background: #07c160;
}

/* 标签页样式 */
.tabs {
  display: flex;
  background: #fff;
  margin-bottom: 20rpx;
  overflow-x: auto;
  white-space: nowrap;
}

.tab-item {
  padding: 20rpx 30rpx;
  font-size: 28rpx;
  color: #666;
  position: relative;
  display: inline-block;
}

.tab-item.active {
  color: #d32f2f;
  font-weight: bold;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background: #d32f2f;
  border-radius: 2rpx;
}

/* 红事系统标签页 */
.red-theme .tab-item.active {
  color: #d32f2f;
}

.red-theme .tab-item.active::after {
  background: #d32f2f;
}

/* 白事系统标签页 */
.white-theme .tab-item.active {
  color: #07c160;
}

.white-theme .tab-item.active::after {
  background: #07c160;
}
