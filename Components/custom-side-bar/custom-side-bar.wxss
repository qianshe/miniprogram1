page {
  background-color: var(--td-bg-color-container);
}

page .round-image {
  border-radius: 12rpx;
}

.side-bar-wrapper {
  display: flex;
  height: 100vh;

  --td-grid-item-text-font-size: 24rpx;
}

.side-bar-wrapper .content {
  flex: 1;
}

.side-bar-wrapper .section {
  padding: 32rpx 0;
}

.side-bar-wrapper .title {
  padding-left: 40rpx;
  margin-bottom: 8rpx;
  font-size: 28rpx;
  line-height: 44rpx;
  color: var(--td-text-color-primary);
}

.side-bar-wrapper .image {
  width: 96rpx;
  height: 96rpx;
  position: relative;
}

.side-bar-wrapper .image::before {
  content: ' ';
  position: absolute;
  top: 0;
  left: 0;
  width: 200%;
  height: 200%;
  border-radius: 24rpx;
  border: 2rpx solid var(--td-gray-color-4);
  transform-origin: 0 0;
  transform: scale(0.5);
}

@font-face {
  font-family: 'MyFont';
  src: url('/assets/fonts/t.woff') format('woff');
}

.loading {
  text-align: center;
  padding: 40rpx;
  color: #999;
  font-size: 28rpx;
}

.price {
  color: #e34d59;
  font-size: 24rpx;
  margin-top: 4rpx;
}

.load-more {
  text-align: center;
  padding: 20rpx 0;
  color: #999;
  font-size: 24rpx;
}

.custom-side-bar {
  position: relative;
  display: flex;
  height: 100%;
}

.side-bar-container {
  width: 200rpx;
  height: 100%;
  background-color: #f5f5f5;
}

.content-container {
  flex: 1;
  height: 100%;
  background-color: #fff;
}

.title-item {
  padding: 24rpx 16rpx;
  font-size: 28rpx;
  color: #333;
  line-height: 1.4;
  border-bottom: 1px solid #eee;
}

.goods-item {
  display: flex;
  padding: 24rpx;
  border-bottom: 1px solid #eee;
}

.goods-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  margin-right: 24rpx;
}

.goods-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.goods-name {
  font-size: 28rpx;
  color: #333;
  line-height: 1.4;
}

.goods-price {
  font-size: 32rpx;
  color: #ff4444;
  font-weight: bold;
}